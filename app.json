{
  "expo": {
    "name": "Construction Inspection Pro",
    "slug": "construction-inspection-pro",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "inspectionpro",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1E3A5F"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.constructioninspectionpro.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to capture photos of inspection items and defects.",
        "NSPhotoLibraryUsageDescription": "This app accesses your photo library to attach existing photos to inspections.",
        "NSPhotoLibraryAddUsageDescription": "This app saves inspection photos to your photo library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1E3A5F"
      },
      "package": "com.constructioninspectionpro.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-image-picker",
        {
          "photosPermission": "This app accesses your photos to attach to inspection reports.",
          "cameraPermission": "This app uses the camera to capture inspection photos."
        }
      ],
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      }
    }
  }
}
